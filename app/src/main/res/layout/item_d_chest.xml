<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/rl_background"
        android:layout_width="match_parent"
        android:layout_height="203dp">
        <ImageView
            android:id="@+id/chest_background"
            android:src="@mipmap/pic_product"
            android:scaleType="matrix"
            android:layout_width="match_parent"
            android:layout_height="203dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70px"
            android:layout_alignParentBottom="true"
            android:background="@color/black_deep"
            android:orientation="horizontal">
            <RelativeLayout
                android:id="@+id/rl_left_drawer"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <ImageView
                    android:id="@+id/img_left_drawer"
                    android:layout_width="@dimen/ic_size_normal"
                    android:layout_height="@dimen/ic_size_normal"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_drawer_left_1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_right_drawer"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_right_drawer"
                    android:layout_width="@dimen/ic_size_normal"
                    android:layout_height="@dimen/ic_size_normal"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_drawer_right_1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_left_chest"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_left_chest"
                    android:layout_width="@dimen/ic_size_normal"
                    android:layout_height="@dimen/ic_size_normal"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_chest_left_1" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rl_right_chest"
                android:layout_width="0px"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <ImageView
                    android:id="@+id/img_right_chest"
                    android:layout_width="@dimen/ic_size_normal"
                    android:layout_height="@dimen/ic_size_normal"
                    android:layout_centerInParent="true"
                    android:src="@drawable/ic_chest_right_1" />
            </RelativeLayout>
        </LinearLayout>
        <TextView
            android:id="@+id/tv_host"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="30px"
            android:textStyle="bold"
            android:textSize="@dimen/text_size_normal_27"
            android:textColor="@color/text_green"/>
    </RelativeLayout>

    <Space
        android:layout_below="@id/rl_background"
        android:layout_width="match_parent"
        android:layout_height="30px" />
</RelativeLayout>