<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/title_background">
        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="90px"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/ib_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:background="@mipmap/ic_back_arrow_56"/>
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_big"
            android:text="注册"/>
    </RelativeLayout>
    <ScrollView
        android:id="@+id/login_form"
        android:background="@color/content_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="160px"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginLeft="90px"
                android:layout_marginRight="90px"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/img_sign_account"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ic_account_56" />

                <EditText
                    android:id="@+id/et_sign_account"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32px"
                    android:layout_weight="1"
                    android:hint="手机号|邮箱"
                    android:textColorHint="@color/text_gray"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_normal"
                    android:background="@null"
                    android:maxLines="1" />

                <ImageButton
                    android:id="@+id/img_sign_del"
                    android:visibility="invisible"
                    android:layout_width="@dimen/ic_size_small"
                    android:layout_height="@dimen/ic_size_small"
                    android:layout_marginRight="8px"
                    android:background="@mipmap/ic_del_56" />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/pic_line_horizontal_8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="15px"
                android:layout_marginLeft="90px"
                android:layout_marginRight="90px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_sign_verify"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="2dp"
                    android:background="@mipmap/ic_verify_56" />

                <EditText
                    android:id="@+id/et_sign_verify"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32px"
                    android:layout_weight="1"
                    android:hint="验证码"
                    android:textColorHint="@color/text_gray"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_normal"
                    android:background="@null"
                    android:maxLines="1"/>

                <TextView
                    android:id="@+id/tv_get_verify"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8px"
                    android:textColor="@color/green_shallow"
                    android:textSize="@dimen/text_size_normal"
                    android:text="获取验证码"/>
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/pic_line_horizontal_8"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="15px"
                android:layout_marginLeft="90px"
                android:layout_marginRight="90px"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_key1"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/ic_password_56" />


                <EditText
                    android:id="@+id/et_sign_password"
                    android:layout_width="0px"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="32px"
                    android:layout_weight="1"
                    android:hint="密码"
                    android:textColorHint="@color/text_gray"
                    android:textColor="@color/text_black"
                    android:textSize="@dimen/text_size_normal"
                    android:background="@null"
                    android:maxLines="1"/>

                <CheckBox
                    android:id="@+id/cb_login_del"
                    android:button="@null"
                    android:background="@drawable/select_seen"
                    android:layout_width="@dimen/ic_size_small_1"
                    android:layout_height="@dimen/ic_size_small_1"
                    android:layout_marginRight="8px"/>
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/pic_line_horizontal_8"/>
            <Button
                android:id="@+id/btn_sign_ensure"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="80px"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="90px"
                android:layout_marginRight="90px"
                android:background="@drawable/ripple_button_long"
                android:textColor="@color/text_write"
                android:textSize="@dimen/text_size_normal_27"
                android:text="注册"
                android:textStyle="bold" />
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="50px"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray"
                    android:textSize="20px"
                    android:text="点击“注册”,代表您已阅读并同意"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text_gray_deep"
                    android:textSize="20px"
                    android:text="百翮信息科技服务"/>
            </LinearLayout>
            <TextView
                android:layout_marginTop="50px"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/green_shallow"
                android:textSize="@dimen/text_size_normal"
                android:text="去登录"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>