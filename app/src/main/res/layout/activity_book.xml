<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/title_background"
        android:elevation="5dp">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="90px"
            android:layout_height="match_parent"
            android:background="@drawable/ripple_title_click">

            <ImageButton
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:background="@mipmap/ic_back_arrow_56" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="书籍详情"
            android:textColor="@color/text_black"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="350px">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="280px"
                    android:background="@mipmap/pic_book_bg" />

                <ImageView
                    android:layout_width="90dp"
                    android:layout_height="120dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/pic_book2"
                    android:transitionName="@string/transition" />


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="30px"
                android:layout_marginRight="30px"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginRight="10px"
                        android:src="@mipmap/ic_book_item_mark" />

                    <TextView
                        android:layout_width="90px"
                        android:layout_height="wrap_content"
                        android:text="书名:"
                        android:textColor="@color/text_gray_deep"
                        android:textSize="@dimen/text_size_normal_27" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="老司机的职业道德与个人修养"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_normal_27" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginRight="10px"
                        android:src="@mipmap/ic_book_item_mark" />

                    <TextView
                        android:layout_width="90px"
                        android:layout_height="wrap_content"
                        android:text="ISBN:"
                        android:textColor="@color/text_gray_deep"
                        android:textSize="@dimen/text_size_normal_27" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="99856584884964"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_normal_27" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginRight="10px"
                        android:src="@mipmap/ic_book_item_mark" />

                    <TextView
                        android:layout_width="90px"
                        android:layout_height="wrap_content"
                        android:text="简介:"
                        android:textColor="@color/text_gray_deep"
                        android:textSize="@dimen/text_size_normal_27" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/book_summary"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_normal_27" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="30px"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="16dp"
                            android:layout_marginRight="10px"
                            android:src="@mipmap/ic_book_item_mark" />

                        <TextView
                            android:layout_width="90px"
                            android:layout_height="wrap_content"
                            android:text="目录:"
                            android:textColor="@color/text_gray_deep"
                            android:textSize="@dimen/text_size_normal_27" />

                        <Space
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="@string/book_summary" />

                        <ImageView
                            android:layout_width="@dimen/ic_size_little"
                            android:layout_height="@dimen/ic_size_small"
                            android:src="@mipmap/ic_forward" />
                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20px"
                        android:layout_marginTop="30px"
                        android:text="第一章: 前言简介"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_normal_27" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="115px"
                        android:layout_marginTop="10px"
                        android:text="第1节:前言简介"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_normal_27" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="115px"
                        android:layout_marginTop="10px"
                        android:text="第2节:前言简介"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_normal_27" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="16dp"
                        android:layout_marginRight="10px"
                        android:src="@mipmap/ic_book_item_mark" />

                    <TextView
                        android:layout_width="90px"
                        android:layout_height="wrap_content"
                        android:text="备注:"
                        android:textColor="@color/text_gray_deep"
                        android:textSize="@dimen/text_size_normal_27" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18岁以下请在家长陪同下观看"
                        android:textColor="@color/text_gray"
                        android:textSize="@dimen/text_size_normal_27" />

                    <ImageView
                        android:layout_width="@dimen/ic_size_small_14"
                        android:layout_height="@dimen/ic_size_small_14"
                        android:layout_marginLeft="30px"
                        android:src="@mipmap/ic_book_edit" />
                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="200px" />
            </LinearLayout>

        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>


</LinearLayout>