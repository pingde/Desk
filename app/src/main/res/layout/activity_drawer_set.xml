<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/content_background"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="100px"
        android:background="@color/title_background">

        <RelativeLayout
            android:id="@+id/rl_back"
            android:layout_width="90px"
            android:layout_height="match_parent">

            <ImageButton
                android:id="@+id/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20px"
                android:background="@mipmap/ic_back_arrow_56" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="设置"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_size_big"
            android:textStyle="bold" />
    </RelativeLayout>


    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:text="左密码管理"
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/text_size_normal_27" />

            <TextView
                android:id="@+id/tv_notice1"
                android:layout_marginBottom="10px"
                android:layout_marginTop="15px"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="关闭后抽屉密码停用"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_small"/>


        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/s_left"
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:src="@mipmap/pic_line_horizontal_long" />

    <LinearLayout
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_marginLeft="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="50px"
                android:text="右密码管理"
                android:textColor="@color/text_gray_deep"
                android:textSize="@dimen/text_size_normal_27" />

            <TextView
                android:id="@+id/tv_notice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10px"
                android:layout_marginTop="15px"
                android:text="开启后抽屉可被上锁"
                android:textColor="@color/text_gray"
                android:textSize="@dimen/text_size_small" />
        </LinearLayout>

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <Switch
            android:id="@+id/s_right"
            android:layout_marginRight="30px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:src="@mipmap/pic_line_horizontal_long" />

    <LinearLayout
        android:id="@+id/ll_pwd_reset"
        android:background="@drawable/ripple_content_click"
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:clickable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码重置"
            android:layout_marginLeft="30px"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_size_normal_27" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/ic_size_little"
            android:layout_height="@dimen/ic_size_small"
            android:layout_marginRight="30px"
            android:src="@mipmap/ic_forward" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:src="@mipmap/pic_line_horizontal_long" />

    <LinearLayout
        android:id="@+id/ll_pwd_modify"
        android:layout_width="match_parent"
        android:background="@drawable/ripple_content_click"
        android:clickable="true"
        android:layout_height="90px"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="密码修改"
            android:layout_marginLeft="30px"
            android:textColor="@color/text_gray_deep"
            android:textSize="@dimen/text_size_normal_27" />

        <Space
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="@dimen/ic_size_little"
            android:layout_height="@dimen/ic_size_small"
            android:layout_marginRight="30px"
            android:src="@mipmap/ic_forward" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30px"
        android:layout_marginRight="30px"
        android:src="@mipmap/pic_line_horizontal_long" />
</LinearLayout>